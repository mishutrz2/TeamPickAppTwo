@page
@model TeamPickAppTwo.Pages.ListManagement.EditModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>List</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="List.ListId" />
            <div class="form-group">
                <label asp-for="List.Name" class="control-label"></label>
                <input asp-for="List.Name" class="form-control" />
                <span asp-validation-for="List.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="List.Location" class="control-label"></label>
                <input asp-for="List.Location" class="form-control" />
                <span asp-validation-for="List.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="List.PasswordHash" class="control-label"></label>
                <input asp-for="List.PasswordHash" class="form-control" />
                <span asp-validation-for="List.PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
